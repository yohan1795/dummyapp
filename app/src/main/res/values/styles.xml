<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/app_background_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="AppTheme.Title" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="AppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:height">25dp</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_margin">@dimen/margin_components</item>
        <item name="android:textColorHint">@color/solidBlack</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Spinner">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:height">25dp</item>
        <item name="android:layout_margin">@dimen/margin_components</item>
        <item name="android:paddingTop">@dimen/padding_edittext</item>
        <item name="android:paddingBottom">@dimen/padding_edittext</item>
        <item name="android:paddingRight">@dimen/padding_edittext</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Padding">
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:layout_margin">@dimen/margin_components</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
